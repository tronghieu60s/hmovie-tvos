{
  "expo": {
    "name": "HMovie TV",
    "slug": "hmovie-tvos",
    "description": "HMovie TV is a multi-platform watching movie application.",
    "scheme": "com.hmovie.tvos",
    "icon": "./assets/images/logo/logo_light.png",
    "splash": {
      "image": "./assets/images/logo/logo_full_light.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "platforms": ["web", "ios", "android"],
    "plugins": [
      ["expo-router"],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": false
          },
          "android": {
            "newArchEnabled": false,
            "usesCleartextTraffic": true
          }
        }
      ],
      [
        "@react-native-tvos/config-tv",
        {
          "androidTVBanner": "./assets/tv_icons/icon-400x240.png"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "ios": {},
    "web": {
      "name": "HMovie TV",
      "output": "static",
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "android": {
      "package": "com.hmovie.tvos"
    },
    "userInterfaceStyle": "automatic",
    "extra": {
      "eas": {
        "projectId": "c50ca703-9994-4150-9fc7-37f1ce97cfb2"
      },
      "router": {
        "origin": "https://hmovie-tvos.vercel.app/"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/c50ca703-9994-4150-9fc7-37f1ce97cfb2"
    }
  }
}
